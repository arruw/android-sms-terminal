<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smst.dotmav.smst.SpashActivity"
    android:background="@color/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_circle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_circle"
        android:layout_above="@+id/splash_dots"
        android:layout_below="@+id/splash_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_text"
        android:layout_below="@+id/splash_description"
        android:layout_above="@+id/splash_dots" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_full_name"
        android:id="@+id/splash_full_name"
        android:textColor="@color/text"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_description"
        android:id="@+id/splash_description"
        android:layout_below="@+id/splash_full_name"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/text_secondary"
        android:textStyle="italic"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/splash_dots"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:textSize="35dp"
        android:textIsSelectable="false"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true" />

</RelativeLayout>

